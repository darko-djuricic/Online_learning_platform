@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="class=" container"">
    <h4>@ViewData["Title"]</h4>

    <div class="alert alert-warning" role="alert">
        <span><strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong></span>
    </div>

    <div class="row">
        <div class="col-md-5">
            <form id="delete-user" method="post" class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
                @if (Model.RequirePassword)
                {
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }
                <button class="btn btn-danger" type="submit">Delete data and close my account</button>
            </form>
        </div>
        <div class="col-md-7 d-none d-md-block">
            <img src="~/img/delete_acc.svg" class="img-fluid mt-3" alt="Delete account" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#manageNav").css("display", "none");
        $(".container-fluid").addClass("container");
        $(".container-fluid").removeClass("container-fluid")
        $(".border-left").removeClass("border-left")
    </script>
}