@{
    Layout = "_LayoutTeacher";
    ViewBag.Title = "Teacher Panel/Communications";
}
@model List<Course>

@section Styles{ 
    <link href="~/css/communications.css" rel="stylesheet" />
}
<h1 class="mt-3 mb-5 pb-5 col-md-10 text-center">Communicatons</h1>
<div class="container-fluid mt-5 pt-5">
    <h5 class="ml-1 mb-3">Pick course:</h5>
    <div class="courses row mb-5">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-auto">
                <input type="checkbox" id="check@(i)" class="checkCourse" name="name" hidden value="@Model[i].CourseId" autocomplete="off" />
                <label for="check@(i)" class="col-12 pickCourse d-flex justify-content-center align-items-center text-center p-3 ml-1 shadow">
                    <b>@Model[i].Title</b>
                </label>
            </div>
        }
    </div>
    <div class="row">
        <div class="pt-2">
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" value="0" id="customRadioInline0" name="radioComments" class="custom-control-input" checked>
                <label class="custom-control-label h5" for="customRadioInline0">Reviews</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" value="1" id="customRadioInline1" name="radioComments" class="custom-control-input">
                <label class="custom-control-label h5" for="customRadioInline1">Q&A</label>
            </div>
        </div>
        <div class="col-7 col-lg-4 p-0">
            <div class="input-group">
                <input type="text" class="form-control searchComments" placeholder="Search all comment">
                <div class="input-group-append">
                    <button class="btn btn-outline-success disabled">Search</button>
                </div>
            </div>
        </div>
    </div>
    
    <div id="loader" class="mt-5 col-md-10 text-center">
        <div class="spinner" style="display: none;">
            <span class="h5">Please wait. If this takes longer than 10 seconds, refresh page and try again.</span><br />
            <div class="spinner-border mt-5 text-success" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>
</div>
<partial name="_CommentModals" />
<partial name="_DeleteModal" />
@section Scripts{ 
    <script>
        var username = "@User.Identity.Name";
    </script>
    <script src="~/js/communications.js"></script>
    <script src="~/js/comment.js"></script>
}